<p id="notice"><%= notice %></p>
<h1>Username</h1>
<p>
  <%=link_to "Ask Question" , new_question_path(params[:id],:user_id => @user),:class=>"btn btn-primary btn-large pull-right top-marg"%>
</p>
<div class="row">
  <div class="span12">
    <div class="row">
      <div class="span3"><img src="img/key_vectorized.png"></div>
      <div class="span9">
        <p>
          <b>Name:</b>
          <%= @user.name %>
        </p>
        <p>
          <b>Email:</b>
          <%= @user.email %>
        </p>
      </div>
    </div>
    <div class ="row">
      <div class="span6">
        <h2>My Questions</h2>
        <%if @questions%>
          <% @questions.each do |entry| %>
            <section>
              <%= link_to entry[:title], question_path(entry[:id])%>
            </section>
          <%end%>
        <%end%>
      </div>
      <div class="span6">
        <h2>My Answers</h2>
      </div>
    </div>
  </div>
</div>

<%= link_to 'Edit', edit_user_path(@user) %> |
<%= link_to 'Back', users_path %>
